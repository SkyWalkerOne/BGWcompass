<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createGame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:alpha="0.65"
        android:fontFamily="@font/yeah_bold"
        android:text="ДОБАВИТЬ ИГРУ"
        android:textColor="#A1887F"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/nameGame"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="30dp"
        android:hint="Имя игры"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/timeGame"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_below="@id/nameGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:hint="Дата и время игры"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/descGame"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_below="@id/timeGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:hint="Описание игры"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/placeGame"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_below="@id/descGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:hint="Место игры"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

    <TextView
        android:id="@+id/hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placeGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:alpha="0.0"
        android:fontFamily="@font/yeah_bold"
        android:text="Все поля должны быть заполнены!"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/buttonChange"
        android:layout_width="35pt"
        android:layout_height="35pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.7"
        android:clickable="true"
        android:onClick="createGame"
        app:srcCompat="@drawable/lettersend"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget,NotSibling,UsingOnClickInXml" />

    <ImageView
        android:id="@+id/buttonEditProfile"
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@id/buttonChange"
        android:alpha="0.7"
        android:clickable="true"
        android:onClick="goBack"
        app:srcCompat="@drawable/delete"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget,NotSibling,UsingOnClickInXml" />

</RelativeLayout>